<%= form_with url: "/users/#{@user.id}/movies", local: true do |f| %>
    <div class="row justify-content-center">
        <div class="col-xs-4">
            <%= f.text_field :title, placeholder: "Search by Movie Title", class: "form-control" %>
        </div>
        <%= f.submit "Search", class: 'btn btn-success' %>
    </div>
<% end %>